<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".GrassActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textGridflower"
            android:text="Grass Type"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_centerInParent="true" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"  >




         <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="20dp"
            android:background="#000"
             >



        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feather Reed"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#fff"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>
        </TableRow>
        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/feather_reed_grass"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foxtail"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:textSize="18sp"/>
        </TableRow>
         <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/foxtail_grass"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hakone"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:textSize="18sp"/>
        </TableRow>
         <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hakone_grass"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Himalaya Fairy"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:textSize="18sp"/>
        </TableRow>
         <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/himalaya_fairy_grass"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>

        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pampas"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:textSize="18sp"/>
        </TableRow>
         <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pampas_grass"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red Tussock"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"
                android:textSize="18sp"/>
        </TableRow>
         <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_tussock_grass"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_marginHorizontal="1dp"/>

        </TableRow>

    </TableLayout>

    </ScrollView>

    </RelativeLayout>

</LinearLayout>